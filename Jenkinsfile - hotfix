pipeline {
  agent any
  options {
    skipDefaultCheckout()
  }
  stages {
    stage('Building: admin (hotfix branch)') {
      steps {
        script {
          try {
            echo "Building: env.JOB_NAME=${env.JOB_NAME} env.BUILD_ID=${env.BUILD_ID}"
            openshiftBuild bldCfg: 'admin-angular-on-nginx-hotfix-build-angular-app-build', showBuildLogs: 'true'
          } catch (e) {
            error("Building: Failed: ${e}")
          }
          echo "Building: Success"
        }
      }
    }
    stage('Deploying: admin (hotfix branch)') {
      steps {
        script {
          try {
            echo "Deploying: env.JOB_NAME=${env.JOB_NAME} env.BUILD_ID=${env.BUILD_ID}"
            openshiftBuild bldCfg: 'admin-angular-on-nginx-hotfix-build', showBuildLogs: 'true'
          } catch (e) {
            error("Deploying: Failed: ${e}")
          }
          echo "Deploying: Success"
        }
      }
    }
  }
}
